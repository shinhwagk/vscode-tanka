{
	"name": "vscode-tanka",
	"displayName": "vscode-tanka",
	"description": "a sample tanka extension.",
	"version": "0.0.4",
	"publisher": "shinhwagk",
	"preview": true,
	"engines": {
		"vscode": "^1.65.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/shinhwagk/vscode-tanka"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"tanka",
		"devops",
		"kubernetes"
	],
	"activationEvents": [
		"workspaceContains:environments/**/main.jsonnet"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "TankaExplorer",
					"name": "Tanka Environments",
					"contextualTitle": "Package Explorer",
					"when": "tankaEnabled"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "vscode-tanka.env.show",
					"when": "view == TankaExplorer"
				},
				{
					"command": "vscode-tanka.env.apply",
					"when": "view == TankaExplorer"
				},
				{
					"command": "vscode-tanka.env.diff",
					"when": "view == TankaExplorer"
				}
			],
			"view/title": [
				{
					"command": "tanka.refresh",
					"group": "navigation",
					"when": "view == TankaExplorer"
				}
			]
		},
		"commands": [
			{
				"command": "tanka.refresh",
				"title": "refresh",
				"icon": {
					"light": "images/refresh_light.svg",
					"dark": "images/refresh_dark.svg"
				}
			},
			{
				"command": "vscode-tanka.env.show",
				"title": "show"
			},
			{
				"command": "vscode-tanka.env.apply",
				"title": "apply"
			},
			{
				"command": "vscode-tanka.env.diff",
				"title": "diff"
			}
		],
		"configuration": {
			"properties": {
				"tanka.enable": {
					"type": "boolean",
					"default": false,
					"examples": [
						true,
						false
					]
				},
				"tanka.diff.command": {
					"type": "string",
					"default": "diff -U 10000",
					"description": "set KUBECTL_EXTERNAL_DIFF"
				}
			}
		}
	},
	"extensionDependencies": [
		"redhat.vscode-yaml",
		"Grafana.vscode-jsonnet",
		"ms-kubernetes-tools.vscode-kubernetes-tools"
	],
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"package": "rm -fr dist && webpack --mode production --devtool hidden-source-map",
		"watch": "tsc -p . -w --outDir dist",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/vscode": "^1.65.0",
		"@types/glob": "^7.2.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"typescript": "^4.5.5",
		"ts-loader": "^9.2.6",
		"webpack": "^5.69.1",
		"webpack-cli": "^4.9.2"
	}
}